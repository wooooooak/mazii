<!DOCTYPE html>
<html>
<head>
    <% let chatList = user.chatAttendedPost %>
    <% let ListCount = chatList.length %>

    <title>mazii</title>
    <% include ../partials/stylesheet %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.0/css/bootstrap-datepicker3.min.css">
    
</head>
<body>
    <% include ../partials/header %>

  <div class="container-fluid">
<br>
<br>
<br>
    <div class="hide userEmail"><%= user.email %></div>
  <p class="text-center chat-list-title"><%= user.name %>님의 대화 목록입니다</p>

  <section class="card-holder">
      <!-- Begin  -->
      <% chatList.forEach((post,index)=>{ %>
        <div class="col-md-3 col-sm-12">
          <div class="card-container">
              <div class="front">
                <div class="cover text-center">
                  <%= post.city %> <br>
                  <span class="chat-StartDay"><%= post.Date.start %></span> ..
                  <span class="chat-EndDay"><%= post.Date.end %></span>
                </div>

                <div class="author-picture">
                  <img src="<%= post.author.facebook.picture.data.url %>" class="img-circle author-img" />
                </div>

                <div class="user-picture">
                  <% post.chatAttendee.forEach((attendee,index)=>{ %>
                    <input type="hidden" name="attendeeName" value="<%= attendee.email %>"> 
                    <img src="<%= attendee.facebook.picture.data.url %>" class="img-circle user-img" />
                  <% }) %>
                </div>
                  
                <div class="footer ound hollow text-center">
                  <input type="hidden" name="postId" value="<%= post._id %>">
                    <a href="#" class="open-btn addClass" class=""><i class="fa fa-comments" aria-hidden="true"></i> Click Here</a>
                </div>
              </div>
          </div>
        </div>
       <% })%>
      </section>

      <br>
      <br>
      <br>
      <br>

  </div> <!--container-fluid end -->

<!-- 채팅창 팝업부분 -->
<% include ../partials/chat/chat_aside %>

    <!--<pre>
      채팅 갯수 <%= ListCount %>
      <br>
      <%= chatList[0] %>
    </pre> -->

    <% include ../partials/footer %>
    <% include ../partials/javascript %>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
    <script src="/javascripts/chat/chatList.js"></script>
    <script src="/javascripts/chat/chatIndex.js"></script>
    <script src="/javascripts/chat/socket.js"></script>
    <script>

    </script>
 
</body>
</html>
